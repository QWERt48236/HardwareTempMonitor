<UserControl x:Class="HardwareTempMonitor.Views.CPUControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardwareTempMonitor.Views"
             xmlns:vm="clr-namespace:HardwareTempMonitor.ViewModels" 
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:CPUVM/>
    </UserControl.DataContext>
    <Grid>
        <oxy:PlotView Model="{Binding CPUTemperature}"/>
    </Grid>
</UserControl>
