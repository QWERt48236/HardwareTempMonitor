<UserControl x:Class="HardwareTempMonitor.Views.CPUControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardwareTempMonitor.Views"
             xmlns:vm="clr-namespace:HardwareTempMonitor.ViewModels" 
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <oxy:PlotView 
            Visibility="{Binding TemperatureVisibility}" Model="{Binding CPUTemperaturePlot}"></oxy:PlotView>
        <oxy:PlotView Visibility="{Binding LoadVisibility}" Model="{Binding CPULoadPlot}"></oxy:PlotView>
    </Grid>
</UserControl>
