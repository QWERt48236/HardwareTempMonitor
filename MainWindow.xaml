<Window x:Class="HardwareTempMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HardwareTempMonitor.ViewModels" 
        xmlns:local="clr-namespace:HardwareTempMonitor" 
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:CPUVM/>
    </Window.DataContext>
    <Grid>
        <TextBlock Text="{Binding Temperature, Mode=OneWay}" Margin="333,158,342,194" FontSize="20"></TextBlock>
    </Grid>
</Window>
